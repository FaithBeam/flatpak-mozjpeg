{
    "app-id": "com.github.mozjpeg",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.6",
    "sdk": "org.freedesktop.Sdk",
    "command": "cjpeg",
    "finish-args": [
        "--filesystem=host"
    ],
    "cleanup": [
        "/include",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "yasm",
            "cleanup": [
                "/bin",
                "/lib",
                "/share"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/yasm/yasm.git"
                }
            ]
        },
        {
            "name": "mozjpeg",
            "cleanup": [
                "/include/*",
                "/lib/pkgconfig",
                "/lib/debug"
            ],
            "no-autogen": true,
            "buildsystem": "simple",
            "build-commands": [
                "autoreconf -fiv",
                "sh configure --prefix=/app",
                "make",
                "make install"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/mozilla/mozjpeg.git"
                }
            ]
        }
    ]
}